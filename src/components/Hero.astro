    </div>

    <div class="hero-version hero-anim" style="animation-delay: 0.35s">
      <span class="zh">最新版本 v0.2.1 · macOS / Windows / Linux</span>
      <span class="en">Latest v0.2.1 · macOS / Windows / Linux</span>
    </div>
  </div>

  <!-- Hero screenshot -->
  <div class="container">
    <div class="hero-image hero-anim" style="animation-delay: 0.4s">
      <img
        class="hero-screenshot light-img"
        src="/screenshots/editor-light.png"
        alt="Presto Editor - Light Mode"
        loading="eager"
      />
      <img
        class="hero-screenshot dark-img"
        src="/screenshots/editor-dark.png"
        alt="Presto Editor - Dark Mode"
        loading="eager"
      />
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding-top: calc(64px + 4rem);
    padding-bottom: 2rem;
    overflow: hidden;
  }

  /* Gradient orbs */
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: var(--orb-opacity);
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    background: #3b82f6;
    top: -200px;
    right: -100px;
    animation: float-1 25s ease-in-out infinite;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: #8b5cf6;
    top: 100px;
    left: -150px;
    animation: float-2 20s ease-in-out infinite;
  }

  .orb-3 {
    width: 400px;
    height: 400px;
    background: #06b6d4;
    bottom: 0;
    right: 20%;
    animation: float-1 30s ease-in-out infinite reverse;
  }

  /* Hero entrance animation (CSS only, no observer needed) */
  .hero-anim {
    opacity: 0;
    animation: fade-in-up 0.7s ease forwards;
  }

  /* Content */
  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border-radius: 999px;
    border: 1px solid var(--color-border);
    background: var(--color-bg-elevated);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .hero-badge:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 16px rgba(59, 130, 246, 0.15);
    transform: translateY(-1px);
  }

  .hero-badge svg {
    color: var(--color-accent);
  }

  .hero-title {
    font-size: clamp(2.5rem, 7vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.035em;
    margin-bottom: 1.5rem;
  }

  .hero-desc {
    font-size: clamp(1rem, 2.5vw, 1.1875rem);
    color: var(--color-text-secondary);
    line-height: 1.7;
    max-width: 640px;
    margin: 0 auto 2rem;
  }

  .hero-ctas {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1.25rem;
  }

  .hero-version {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
  }

  /* Hero image */
  .hero-image {
    position: relative;
    z-index: 1;
    max-width: 1000px;
    margin: 0 auto;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow:
      0 20px 60px -15px rgba(0, 0, 0, 0.15),
      0 0 0 1px var(--color-border);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .hero-image:hover {
    transform: translateY(-4px);
    box-shadow:
      0 32px 80px -20px rgba(0, 0, 0, 0.2),
      0 0 0 1px var(--color-border);
  }

  @media (prefers-color-scheme: dark) {
    .hero-image {
      box-shadow:
        0 20px 60px -15px rgba(0, 0, 0, 0.5),
        0 0 40px -10px rgba(59, 130, 246, 0.1);
    }
    .hero-image:hover {
      box-shadow:
        0 32px 80px -20px rgba(0, 0, 0, 0.6),
        0 0 60px -10px rgba(59, 130, 246, 0.15);
    }
  }

  .hero-screenshot {
    width: 100%;
    display: block;
  }

  /* Show light screenshot in light mode, dark in dark mode */
  .light-img { display: block; }
  .dark-img { display: none; }

  @media (prefers-color-scheme: dark) {
    .light-img { display: none; }
    .dark-img { display: block; }
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: calc(64px + 2.5rem);
    }

    .hero-title {
      font-size: clamp(2rem, 8vw, 2.75rem);
    }

    .hero-desc br {
      display: none;
    }

    .orb-1 { width: 300px; height: 300px; }
    .orb-2 { width: 250px; height: 250px; }
    .orb-3 { width: 200px; height: 200px; }
  }
</style>
